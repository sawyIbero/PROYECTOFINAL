<%- layout('layouts/main')%>

<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card mt-4 text justify-content-center">
      <div class="card-header text-bg-light p-3">
        <h3 class="badge text-bg-primary">REGISTRO</h3>
      </div>
      <div class="card-body text-bg-light p-3"">
        <form action="/signup" method="POST">
          <div class="form-group">
            <input
              type="email"
              name="email"
              placeholder="Email"
              class="form-control"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              name="password"
              placeholder="Password"
              class="form-control"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-4 badge text-bg-primary">
            REGISTRO
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
